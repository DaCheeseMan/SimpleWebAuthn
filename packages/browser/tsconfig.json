{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": false,
    "removeComments": true,
    "sourceMap": false,
    "noEmit": true,
    "typeRoots": [
      "./node_modules/@types",
      // TODO: Why can't `npm run test` find these types?
      "./node_modules/@simplewebauthn/typescript-types/npm/types",
      "../../node_modules/@types",
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/setupTests.ts",
    "./src/**/__mocks__",
    "./src/**/__jest__"
  ]
}
